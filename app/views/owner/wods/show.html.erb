<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @wod.wodname %></h3>
  </div>
  <div class="panel-body">
    <%= simple_format(@wod.wodname) %>
        <% if @wod.wodtype %>
          <p style="color:#A9A9A9;font-size:11px;">Task Priority</p>
        <% else %>
          <p style="color:#A9A9A9;font-size:11px;">Time Priority</p>
        <% end %>
    <%= simple_format(@wod.description) %>
    <%= simple_format(@wod.introduction) %>
    <%= simple_format(@wod.box) %>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">用户成绩</h3>
  </div>
  <div class="panel-body">
    <table class="table table-boldered">
      <thead>
        <tr>
          <td>用户</td>
          <td>成绩</td>
        </tr>
      </thead>
      <tbody>
        <% @scorings.each do |scoring| %>
          <tr>
            <td><%= scoring.user.name %></td>
            <% if @wod.wodtype %>
              <td><%= scoring.content %>reps</td>
            <% else %>
              <td><%= render_scoring scoring %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
